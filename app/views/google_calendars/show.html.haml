= javascript_tag do
  if (window.Calendar_data == null) { window.Calendar_data = {}; }
  Calendar_data.calendar = #{@current_calendar.id.to_json.html_safe};
  Calendar_data.ApiKey = #{ENV['GOOGLE_CALENDAR_CLIENT_ID'].to_json.html_safe}

.bootstrap
  .container
    .row
      %iframe{src: "https://www.google.com/calendar/embed?showTitle=0&mode=WEEK&wkst=2&src=" + @current_calendar.id.html_safe, height: '700', width: '100%', style: "border: 0", frameborder: "0", scrolling: "no"}